@Library("belajar-jenkins-shared-library@master")_

import lib.*;

pipeline {
    agent any
    stages {
        stage("Hello World") {
            steps {
                script {
                    hello.hello()
                }
            }
        }
        stage("Hello Groovy") {
            steps {
                script {
                    Output.hello(this, "Groovy")
                }
            }
        }
        stage("Global Variable") {
            steps {
                script {
                    echo(author.name())
                    echo(author.channel())
                }
            }
        }
        stage("Hello Person"){
            steps {
                script {
                    hello.person([
                        firstname: "Wyze",
                        lastname: "root"
                    ])
                }
            }
        }
    }
}